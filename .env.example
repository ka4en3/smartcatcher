# .env.example

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/smartcatcher
TEST_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/smartcatcher_test

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT & Security
SECRET_KEY=your-super-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# API Keys for scrapers
EBAY_CLIENT_ID=your-ebay-client-id
EBAY_CLIENT_SECRET=your-ebay-client-secret
ETSY_API_KEY=your-etsy-api-key

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# App Settings
ENVIRONMENT=development
DEBUG=true
API_V1_PREFIX=/api/v1
PROJECT_NAME=SmartCatcher

# Scraper Settings
SCRAPER_DELAY_MIN=1
SCRAPER_DELAY_MAX=3
SCRAPER_MAX_RETRIES=3
SCRAPER_USER_AGENT="SmartCatcher Bot 1.0"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Notification Settings
NOTIFICATION_BATCH_SIZE=10
NOTIFICATION_RETRY_DELAY=300