# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/smartcatcher

# Redis
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# eBay API (Browse API)
EBAY_CLIENT_ID=your-ebay-client-id-here
EBAY_CLIENT_SECRET=your-ebay-client-secret-here
EBAY_ENVIRONMENT=sandbox
EBAY_RATE_LIMIT_REQUESTS_PER_DAY=5000

# Etsy API (Open API v3)
ETSY_API_KEY=your-etsy-api-key-here
ETSY_RATE_LIMIT_REQUESTS_PER_SECOND=10

# Scraper Settings
SCRAPER_USER_AGENT=SmartCatcher/1.0 (+https://example.com/bot)
SCRAPER_REQUEST_DELAY=1
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_TIMEOUT=30

# Celery Beat Schedule
PRICE_CHECK_INTERVAL_MINUTES=60
PRICE_CHECK_INTERVAL_SECONDS=3600

# Debug
DEBUG=true
LOG_LEVEL=INFO
